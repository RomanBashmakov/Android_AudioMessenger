<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/permissions"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/Record"
        android:layout_marginVertical="10dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="recordStart"
            android:text="@string/start"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="recordStop"
            android:text="@string/stop"/>

    </LinearLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/linearLayoutPermissions"
        android:layout_marginVertical="40dp"
        android:id="@+id/Record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="@string/record"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/Permissions"
        android:layout_marginVertical="10dp"
        android:id="@+id/linearLayoutPermissions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="10dp">
        <Button
            android:layout_weight="1"
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getMicPermission"
            android:text="@string/GetFirstPermission"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="40dp"
            app:layout_constraintTop_toBottomOf="@id/Permissions"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="getStoragePermission"
            android:text="@string/GetSecondPermission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3"
            tools:layout_editor_absoluteY="40dp" />
    </LinearLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/packetsCounter"
        android:layout_marginVertical="40dp"
        android:id="@+id/Filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="@string/Filter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/Filter"
        android:layout_marginVertical="10dp"
        android:id="@+id/layoutFilter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

        <EditText
            android:id="@+id/frequencyFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/Frequency"
            android:inputType="number"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="setHz"
            android:text="@string/Set_Hz"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/SetBWLayout"
        app:layout_constraintTop_toBottomOf="@id/layoutFilter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">

        <EditText
            android:id="@+id/BandWidthInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/BandWidth"
            android:inputType="number"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="setBW"
            android:text="@string/Set_BandWidth"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SetBDLayout"
        app:layout_constraintTop_toBottomOf="@id/SetBWLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">

        <EditText
            android:id="@+id/BitDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/BitDuration"
            android:inputType="number"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="setBD"
            android:text="@string/Set_BitDuration"/>
    </LinearLayout>

    <TextView
        android:id="@+id/packetsCounter"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:hint="@string/Packets"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/messageOutput"
        app:layout_constraintTop_toBottomOf="@id/SetBDLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:hint="@string/MessageHint"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-30dp"
        tools:layout_editor_absoluteY="561dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="toTransmit"
            android:text="@string/Transmit" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="toReceive"
            android:text="@string/Receive" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>